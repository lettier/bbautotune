% using 8 x 11.5 inch paper
%  minimum margins --
%    Left margin    1.5 inches
%    Right margin   1   inch
%    Top margin     1   inch
%    Bottom margin  1   inch
%
%  Top margin of the first page of each chapter  2 inches
%   NOTE:
%    the margin that has the page number in it will
%    be 1.5 inches from edge of page to text

%  just explicitly setting the page offsets to 0
\setlength{\hoffset}{0.0in}
%\setlength{\hoffset}{-0.275in}  % for two sides, center page
\setlength{\voffset}{0.0in}

% I am assuming that the page numbers are in the footer
%  and that there is NO header
% modifications will be needed if page numbers are in the header

% the distance from top edge to text is
%   1in + \voffset + \topmargin + \headheight + \headsep
%   1in + 0 + (-.3in) + (12pt+25pt)/72.27 = 1.21 in
\setlength{\topmargin}{-0.3in}
\setlength{\headheight}{12pt}
\setlength{\headsep}{25pt}

%  I like indented paragraphs
\setlength{\parindent}{0.5in}

% bottom of text is 1.21in + 8.10in = 9.31in from top
%   or 11.0 - 9.31 = 1.69in  from bottom (to meet 1.5in min)
\setlength{\textheight}{8.1in}

% page number is 1.69in - 30pt/72.27 = 1.27in from bottom edge
\setlength{\footskip}{30pt}

% left margin is
%  1 inch + \voffset + \oddsidemargin
%   1in + 0in + 63pt/72.27  = 1.87in from left edge
\setlength{\oddsidemargin}{63pt}
\setlength{\evensidemargin}{63pt}  % should not be necessary
%\setlength{\marginparwidth}{90pt}  % for margin notes

% right margin is 1.87in + 5.3in = 7.17in from left edge
%  OR 8.5in - 7.17in = 1.32in from right edge
\setlength{\textwidth}{5.3in}

%the six \thesistitle parameters are
%   Dissertation title,
%   document type,
%   department,
%   advisor's name,
%   author's name,
%   date.

\newcommand{\thesistitle}[3]{
      \newpage
%     \singlespacing
      \def\baselinestretch{1}
      \thispagestyle{empty}  % no page number
      \begin{center}
       {\large \normalsize
        \vspace*{.6in}
           {\LARGE \bf #1 } \\  %% the title
        \vspace*{.75in}
           A Thesis \\
        \vspace*{.1in}
           Presented to \\
        \vspace*{.1in}
           The Faculty of the  \\
        \vspace*{.1in}
           Department of Computer and Information Science \\
        \vspace*{.1in}
           Brooklyn College \\
        \vspace*{.1in}
	   The City University of New York \\
        \vspace*{.75in}
           In Partial Fulfillment \\
        \vspace*{.05in}
           of the Requirements for the Degree\\
        \vspace*{.05in}
	    Master of Arts\\
        \vspace*{.75in}
           by\\
        \vspace*{.1in}
           #2\\                   %% your name
        \vspace*{.1in}
           #3\\                   %% Month Year
        }
       \end{center} 
%       \def\baselinestretch{1.9}
      }


